<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/album_selected_item_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center" />

    <View
        android:id="@+id/album_selected_item_mask"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/album_white_cc"
        android:visibility="gone" />

    <View
        android:id="@+id/album_selected_item_frame"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:background="@drawable/album_bg_selected"
        android:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/album_selected_item_camera"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp"
        android:visibility="gone"
        app:srcCompat="@drawable/album_ic_camera" />
</FrameLayout>